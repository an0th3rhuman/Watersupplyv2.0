<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.raghul.watersupplyv20.customer_order">

    <TextView
        android:id="@+id/welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="35dp"
        android:fontFamily="cursive"
        android:text="Welcome User"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="Registered contact:"
        android:textSize="18sp"
        android:layout_marginStart="29dp"
        android:layout_below="@+id/welcome_user"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/display_user_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="phone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="84dp"
        android:text="Water quantity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/book_order_button"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginBottom="69dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/display_estimated_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/display_user_contact"
        android:layout_marginStart="18dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/book_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book an order"

        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_above="@+id/display_estimated_payment"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioGroup">

    </RadioGroup>

    <EditText
        android:id="@+id/get_water_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/radioGroup"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

</RelativeLayout>
