<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.raghul.watersupplyv20.MainActivity">

    <EditText
        android:id="@+id/get_cust_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Contact"
        android:inputType="phone" />

    <EditText
        android:id="@+id/get_cust_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/get_cust_contact"
        android:layout_below="@+id/get_cust_contact"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Customer Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/get_cust_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/get_cust_name"
        android:layout_below="@+id/get_cust_name"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/cust_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_above="@+id/already_reg_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:id="@+id/already_reg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already registered?Click here"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/get_cust_city"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="22dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cust_register_button"
        android:layout_alignStart="@+id/already_reg_button"
        android:layout_marginBottom="14dp"
        android:visibility="visible" >

    </RadioGroup>

</RelativeLayout>
