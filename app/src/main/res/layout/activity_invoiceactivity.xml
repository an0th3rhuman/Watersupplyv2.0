<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.raghul.watersupplyv20.invoiceactivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:text="Your order has been placed"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="73dp"
        android:text="Phone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/invoicephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="registered phone"
        android:textSize="18sp"
        android:layout_above="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="47dp"
        android:text="Time and date"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/invoicetimedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/invoicephone"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginStart="10dp"
        android:text="displaytime"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="33dp"
        android:text="Quantity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/invoicequantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/invoicetimedate"
        android:text="quantity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated price"
        android:textSize="18sp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="33dp" />

    <TextView
        android:id="@+id/costestimated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/invoicequantity"
        android:layout_alignTop="@+id/textView13"
        android:text="Rupees"
        android:textSize="18sp" />

    <Button
        android:id="@+id/cancel_invoice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_marginStart="19dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/textView11"
        android:text="Cancel Order" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/invoicephone"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="15dp"
        android:text="OrderID"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/invoiorderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/invoicephone"
        android:text="Orderid"
        android:textSize="18sp" />
</RelativeLayout>
